# Email Delivery Configuration
# Copy to .env and fill in your values

# Resend (https://resend.com) - API key from dashboard
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Sender identity (must verify domain in Resend)
SENDER_EMAIL=alerts@your-domain.dev
SENDER_NAME=FireWatch Alerts

# Retry behavior
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_BASE_DELAY=2.0

# Digest schedule (Pacific time)
DAILY_DIGEST_HOUR=8
WEEKLY_DIGEST_DAY=mon

# Deduplication - skip duplicate alerts within this window
ALERT_DEDUP_WINDOW_HOURS=24

# Resend webhook secret (for delivery status callbacks)
RESEND_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# Set to true for tests - uses in-memory MockProvider
EMAIL_USE_MOCK=false
